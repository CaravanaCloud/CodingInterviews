      </includes>
    </fileSet>
    <fileSet>
      <directory>target/lib/</directory>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
